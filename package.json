{
    "name": "typeorm-test-transactions",
    "version": "1.8.1",
    "description": "A transactional wrapper for tests that use TypeORM that automatically rolls back the transaction at the end of the test.",
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "pretest": "DB_INIT=1 ts-node tests/index.ts",
        "test": "jest --forceExit",
        "build": "rimraf dist && tsc",
        "prepublish": "git checkout master && npm run build",
        "release": "standard-version --sign",
        "release:dry-run": "standard-version --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/entrostat/typeorm-test-transactions.git"
    },
    "keywords": [
        "typeorm",
        "transaction",
        "test",
        "rollback",
        "wrapper",
        "closure"
    ],
    "author": "Kerren Ortlepp <kerren@entrostat.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/entrostat/typeorm-test-transactions/issues"
    },
    "homepage": "https://github.com/entrostat/typeorm-test-transactions#readme",
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.17",
        "jest": "^24.9.0",
        "mysql": "^2.17.1",
        "pg": "^7.14.0",
        "prettier": "^1.19.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "standard-version": "^7.0.1",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.4",
        "typeorm": "^0.2.21",
        "typescript": "^3.7.3"
    },
    "dependencies": {
        "typeorm-transactional-cls-hooked": "^0.1.10"
    },
    "standard-version": {
        "skip": {
            "tag": false
        }
    }
}
